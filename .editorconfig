# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_size = 2
indent_style = space


# 4 space indentation
[*.{py}]
indent_size = 4
profile = black

# 2 space indentation
[*.{json, yaml, toml}]
indent_size = 2

# 2 space indentation
[*.{md}]
trim_trailing_whitespace = true
max_line_length = off
indent_size = 2
